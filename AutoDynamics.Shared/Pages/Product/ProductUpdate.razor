@page "/product/update"
@using AutoDynamics.Shared.Modals
@using AutoDynamics.Shared.Services
@using AutoDynamics.Shared.Pages.Product
@inject ICurrentData CurrentData

<AddProduct isProductUpdating=true product="@data"/>

@code {
	ProductType data { set; get; } = new ProductType();
	protected override void OnInitialized()
	{
		data = (ProductType)CurrentData.GetCurrentCustomer();
		StateHasChanged();
	}
}